<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="index.css">
    <title>Paneer Posting</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
</head>
<body>

    <!--Navbar-->
    <nav>
        <ul class="left-links">
            <li><a href="/">Home</a></li>
            <li><a href="login">Explore</a></li>
            <li><a href="login">Post Now</a></li>
            <li><a href="aboutus">About us</a></li>

        </ul>
        <ul class="middle-links">
            <li><p class="title">Paneer Posting</p></li>
        </ul>
        <ul class="right-links">
            <li class="dropdown">
                <a href="#" class="icon">My Account</a>
                <div class="dropdown-content">
                    <a href="signup">Sign Up</a>
                    <a href="login">Login</a>

                </div>
            </li>
            <li><a href="myprofile">Settings</a></li>
            <li>
                <form action="/search" role="search" method="post">
                    <input type="search" name="searchQuery" id="searchInput" placeholder="Search..." style="height: 1px;">
                    <button type="submit"><i class="fas fa-search"></i></button>
                </form>
            </li>
        </ul>
    </nav>
    
    <!-- settings.ejs -->

<!-- Profile Details -->
<div class="main">
    <h2 style="color: white;">Profile Details</h2>
    <div class="container">
        <div class="card" style="height: auto;">
            <table style="font-size: large;">
                <tbody>
                    <tr>
                        <td>User ID</td>
                        <td>:</td>
                        <td><%= user.user_id %></td>
                    </tr>
                    <tr>
                        <td>Username</td>
                        <td>:</td>
                        <td><%= user.username %></td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>:</td>
                        <td><%= user.email %></td>
                    </tr>
                    <tr>
                        <td>Full Name</td>
                        <td>:</td>
                        <td><%= user.full_name %></td>
                    </tr>
                    <tr>
                        <td>Date Registered</td>
                        <td>:</td>
                        <td><%= user.date_registered %></td>
                    </tr>
                    <!-- Include other user details here -->
                </tbody>
            </table>
            <h2 style="color: white;">Your Posts</h2>
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <div class="post-card">
                        <div class="post-header">
                            <h2><%= post.title %></h2>
                            <p>By <%= post.author %></p>
                        </div>
                        <div class="post-content">
                            <p><%= post.content %></p>
                        </div>
                        <!-- Include other post details here -->
                    </div>
                <% }) %>
            <% } else { %>
                <p>No posts found</p>
            <% } %>
        </div>
    </div>
    
    </div>
    
    
</div>


</body>
</html>