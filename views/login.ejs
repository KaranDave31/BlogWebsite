<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="index.css">
    <title>Paneer Posting</title>
</head>
<body>

    <nav>
        <ul class="left-links">
            <li><a href="/">Home</a></li>
            <li><a href="login">Explore</a></li>
            <li><a href="login">Post Now</a></li>

        </ul>
        <ul class="middle-links">
            <li><p class="title">Paneer Posting</p></li>
        </ul>
    </ul>
    <ul class="right-links">
        <li class="dropdown">
            <a href="#" class="icon">My Account</a>
            <div class="dropdown-content">
                <a href="signup">Sign Up</a>
                <a href="login">Login</a>
            </div>
        </li>       
        <li><a href="myprofile">Settings</a></li> 
        <form action="/search" role="search" method="post">
            <input type="search" name="searchQuery" id="searchInput" placeholder="Enter blog title or author name">
            <button type="submit">Search</button>
        </form>
        
    </ul>        
    </nav>
    
    <!--Signup Box-->
    <div class="container">
        <div class="card">
          
          <div class="form">
            <form action="/login" method="post">
                <input type="text" name="username" id="username" placeholder="UserName" />
                <input type="text" name="fullname" id="fullname" placeholder="FullName" />
                <input type="email" name="email" placeholder="Email" id="email" />
                <input type="password" name="password" id="password" placeholder="Password" />
                <input type="checkbox" id="showPasswordCheckbox" onclick="togglePasswordVisibility()">
                <label for="showPasswordCheckbox">Show Password</label>
                <button type="submit">LOGIN</button>
            </form>
          </div>
     
        </div>
      </div>
      <script>
        // Extract the username from the URL
        const urlParams = new URLSearchParams(window.location.search);
        const username = urlParams.get('username');
        if (username) {
            // Display a welcome message
            alert(`Welcome back, ${username}!`);
        }

        function togglePasswordVisibility() {
            const passwordInput = document.getElementById("password");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
            } else {
                passwordInput.type = "password";
            }
        }
        
    </script>

</body>
</html>